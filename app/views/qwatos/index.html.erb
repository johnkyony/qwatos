

<div class="row">
	<div class="col-sm-6 col-md-4 col-md-offset-4">
	<% @qwatos.each do |qwato| %>
		<div id= "qwato_<%= qwato.id %>" class="thumbnail ">
			<%= image_tag qwato.image_url , alt: qwato.quote  %>
			<br/>
			<% if user_signed_in?  %>
					
					<!-- Twitter -->
				<a href="http://twitter.com/home?status=<%= qwato.image_url %>" title="Share on Twitter" target="_blank" class="btn btn-twitter"><i class="fa fa-twitter"></i> Twitter</a>
				 <!-- Facebook -->
				<a href="https://www.facebook.com/sharer/sharer.php?u=<%= qwato.image_url %>" title="Share on Facebook" target="_blank" class="btn btn-facebook"><i class="fa fa-facebook"></i> Facebook</a>
				

				<%= link_to(user_likes_path(qwato),
    				method: :post ) do %>
    			<%= content_tag('i', nil, class: 'fa fa-thumbs-up fa-2x' ) %>
				<% end %>
			<%= link_to(user_dislikes_path(qwato),
    				method: :post ) do %>
    			<%= content_tag('i', nil, class: 'fa fa-thumbs-down fa-2x' ) %>
				<% end %>
				
			<% else %>
				<%= button_to "share" , user_registration_path , class: "btn btn-primary"%>
				<%= button_to "like", user_registration_path, class: "btn btn-success" %>
			<% end %>
			
		</div>
		<br/>
		<% end %>

	</div>
</div>



	
